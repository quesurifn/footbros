ion-view#page-platform-mobile(style='background-color:#1d1d1d')
  ng-include(src="'actionsheet.html'")
  ion-content(ng-controller='SlidesKoupnCtrl', padding='true', scroll='true', style='padding:0px;margin:0px;')
    h2(ng-model='title', style='color:#fff !important') {{title}}
    ion-slide-box(show-pager='false', class='shim')
      ion-slide(style='min-height:550px;', ng-repeat='item in images')
        img(src='{{item.url}}')
        p(ng-bind-html='item.text') {{item.text}}